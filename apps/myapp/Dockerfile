# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build myapp`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t myapp`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system myapp && \
          adduser --system -G myapp myapp

COPY dist/apps/myapp myapp/
RUN chown -R myapp:myapp .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix myapp --omit=dev -f install

CMD [ "node", "myapp" ]
