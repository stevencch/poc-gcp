{
  "name": "error-handler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/error-handler/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "error-handler:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "error-handler:build:development"
        },
        "production": {
          "buildTarget": "error-handler:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/error-handler/Dockerfile . -t error-handler"
    },
    "docker-run": {
      "dependsOn": ["docker-build"],
      "command": "docker run -it --init --rm -p 4113:4113 error-handler"
    }
  }
}
